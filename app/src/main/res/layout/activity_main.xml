<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#1E1E26"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription=""
                android:scaleType="fitXY"
                android:src="@drawable/wave_background"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_image"
            android:layout_width="214dp"
            android:layout_height="205dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_mentalrageup"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="263dp"
            android:layout_height="135dp"
            android:layout_alignBottom="@drawable/wave_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:fontFamily="@font/caesar_dressing_regular"
            android:text="MentalRage"
            android:textColor="#FFFFFF"
            android:textSize="48sp" />

        <Button
            android:id="@+id/login1"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450dp"
            android:background="#F12A2A"
            android:textColor="#F8F8F8"
            android:fontFamily="@font/caesar_dressing_regular"
            android:text="Iniciar Sesion"
            android:textSize="20dp" />

        <!-- Texto/botón de 'No tienes cuenta? Regístrate!' -->
        <TextView
            android:id="@+id/tv_registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿No tienes cuenta? Regístrate!"
            android:fontFamily="@font/caesar_dressing_regular"
            android:textColor="#7E1313"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="510dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>