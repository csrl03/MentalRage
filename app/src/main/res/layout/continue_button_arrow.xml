<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Triángulo como botón -->
    <View
        android:id="@+id/continue_arrow_button"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/triangle_button"
        android:backgroundTint="#0B1D39"
        android:rotation="90" />

    <!-- Texto debajo del triángulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:fontFamily="@font/caesar_dressing_regular"
        android:textColor="#0B1D39"
        android:textSize="16sp"
        android:gravity="center" />

</LinearLayout>
