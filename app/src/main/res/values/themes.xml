<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MentalRage" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MentalRage" parent="Base.Theme.MentalRage" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#1E1E26</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon_splash_3</item>
        <item name="postSplashScreenTheme">@style/Theme.MentalRage</item>
    </style>

    <style name="Theme.MentalRage.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MentalRage.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MentalRage.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>